<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Notifications">
        <SwitchPreferenceCompat
            android:key="notifications_enabled"
            android:title="Enable Notifications"
            android:summary="Turn on/off medication reminders"
            android:defaultValue="true" />
        <ListPreference
            android:key="postpone_duration"
            android:title="Postpone Duration"
            android:summary="Set how long to postpone reminders"
            android:entries="@array/postpone_durations"
            android:entryValues="@array/postpone_duration_values"
            android:defaultValue="15" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Data Management">
        <Preference
            android:key="clear_history"
            android:title="Clear History"
            android:summary="Delete all taken medications" />
        <Preference
            android:key="clear_all_medications"
            android:title="Clear All Medications"
            android:summary="Delete all medications and reminders" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Appearance">
        <ListPreference
            android:key="theme"
            android:title="Theme"
            android:summary="Choose app theme"
            android:entries="@array/theme_options"
            android:entryValues="@array/theme_values"
            android:defaultValue="system" />
        <ListPreference
            android:key="language"
            android:title="Language"
            android:summary="Choose app language"
            android:entries="@array/language_options"
            android:entryValues="@array/language_values"
            android:defaultValue="en" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Reminders">
        <Preference
            android:key="reset_reminders"
            android:title="Reset Reminders"
            android:summary="Reschedule all pending reminders" />
    </PreferenceCategory>
</PreferenceScreen>